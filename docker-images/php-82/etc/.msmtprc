# Set defaults.
defaults

# Enable or disable TLS/SSL encryption.
auth off
tls off
tls_starttls off
tls_certcheck off
# Set up a default account's settings.
account default
add_missing_from_header on
logfile ~/.msmtp.log
host "mailhog"
port 1025
domain "<domain.com>"
maildomain "<domain.com>"
user <user@domain.com>
password "<password>"
from "<user@domain.com>"